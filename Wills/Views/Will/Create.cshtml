}

@section scripts{
    <script>
        $("#addHeir").on("click", function () {
            $.ajax({
                url: "@Url.Action("AddHeir", "Will")", success: function (partialView) {
                    $('#heirs').append(partialView);
                }
            });
        });

        $("#addBequest").on("click", function () {
            $.ajax({
                url: "@Url.Action("AddBequest", "Will")", success: function (partialView) {
                    $('#bequests').append(partialView);
                }
            });
        });
    </script>
}


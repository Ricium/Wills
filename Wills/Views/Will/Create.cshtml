@model Wills.Models.WillViewModel

@{
    ViewBag.Title = "Create";
}

@section polymer{
    <script src="@Url.Content("~/Content/Polymer/webcomponentsjs/webcomponents-lite.js")"></script>
    <link rel="import" href="@Url.Content("~/Content/Polymer/paper-input/paper-input.html")">
    <link rel="import" href="@Url.Content("~/Content/Polymer/gold-email-input/gold-email-input.html")">
    <link rel="import" href="@Url.Content("~/Content/Polymer/paper-dropdown-menu/paper-dropdown-menu.html")">
    <link rel="import" href="@Url.Content("~/Content/Polymer/paper-item/paper-item.html")">
    <link rel="import" href="@Url.Content("~/Content/Polymer/paper-listbox/paper-listbox.html")">
    <link rel="import" href="@Url.Content("~/Content/Polymer/iron-input/iron-input.html")">
}

@section scripts{
<script>
    Polymer({
        _itemSelected: function (e) {
            var selectedItem = e.target.selectedItem;
            if (selectedItem) {
                console.log("selected: " + selectedItem.value);
            }
        }
    });
</script>       
}

<h2>Create a new Will</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <a data-toggle="collapse" href="#divWilltype">Will Type</a>
        <div id="divWillType" class="collapse in">
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.WillType, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.WillType, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <a data-toggle="collapse" href="#divClient">Client Details</a>
        <div class="collapse" id="divClient" >           

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IDNumDOB, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IDNumDOB, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ContactNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ContactNo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>  
        
        <a data-toggle="collapse" href="#divMarried">Marriage Details</a>
        <div id="divMarried" class="collapse">
            Blah blah
        </div>     
    </div>
}
